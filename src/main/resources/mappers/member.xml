<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mna.homespital.dao.MemberDAO">
    <insert id="insertMember" parameterType="user">
        <![CDATA[
        insert into `user`(user_email, user_password, user_name, user_registration_number,
                           user_phone, zip_code, street_address, detail_address)
        values (#{user_email}, #{user_password}, #{user_name}, #{user_registration_number},
                #{user_phone}, #{zip_code}, #{user_name}, #{user_registration_number})
        ]]>
    </insert>

    <select id="queryMember" resultType="user" parameterType="String">
        <![CDATA[
        select *
        from `user`
        where user_email = #{user_email}
        ]]>
    </select>

    <!--가영: 회원탈퇴-->
    <delete id="deleteMember" parameterType="String">
        <![CDATA[
        delete
        from `user`
        where user_email = #{user_email}
        ]]>
    </delete>

    <!--    가영: 비밀번호 수정-->
    <select id="pwCheck" resultType="String">
        select *
        from `user`
        where user_email = #{user_email}
    </select>

    <update id="pwUpdate">
        update `user`
        set user_password = #{user_password}
        where user_email = #{user_email}
    </update>

    <!--용식: 비밀번호변경-->
    <update id="updatePassword" parameterType="user">
        <![CDATA[
        update `user`
        set user_password=#{user_password}
        where user_email = #{user_email}
        ]]>

    </update>

    <!--   준근 : user_number로 user(환자) 정보 가져오는 쿼리문  -->
    <select id="selectUserDetail" resultType="User" parameterType="int">
        <![CDATA[
        select *
        from user
        where user_number = #{user_number}
        ]]>
    </select>

    <!--가영: 회원정보수정-->
    <update id="updateMember" parameterType="user">
        <![CDATA[
        update `user`
        set user_password            = #{user_password},
            user_name                = #{user_name},
            user_registration_number = #{user_registration_number},
            user_phone               = #{user_phone},
            user_address             = #{user_address}
        where user_email = #{user_email}
        ]]>
    </update>

</mapper>